<div class="container">
<% if @el.errors.any? %>
<div class="alert alert-warning" role="alert">    
<ul><% @el.errors.full_messages.each do |msg| %>
        
        <li><font color= 'red'><%= msg %></font></li>
        <% end %>
        </ul>
        </div>
    <% end %>

<div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(model: @el, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :details, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :details, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
         <p>
        <div class="text-center">
          <%= f.submit class: "btn btn-outline-light btn-dark btn-lg" %>
        </div>
</p>
        <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to elements listing ]', elements_path, class: "text-info" %>
    </div>
  </div>
</div>